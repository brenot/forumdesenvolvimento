<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_ITPMETA</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2015 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>4.3</version>
    <creationDate>07 December, 2015</creationDate>
	<description><![CDATA[
    <p><a href="http://itprism.com/free-joomla-extensions/open-graph-meta" target="_blank">ITPMeta</a> plugin puts your code to the header of pages.</p>
    <p><a href='http://itprism.com/help/32-itpmeta-opengraph-documentation-faq' target='_blank'>Read documentation</a> that will help you to setup the extensions.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/site-management/seo-a-metadata/itpmeta" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
	
    <help url="PLG_SYSTEM_ITPMETA_HELP_URL" />
    
	<files>
		<filename plugin="itpmeta">itpmeta.php</filename>
        <folder>language</folder>
	</files>
	
	<config>
        <fields name="params">
            <fieldset name="basic">
		       <field name="tags_position" type="list" default="0" label="PLG_SYSTEM_ITPMETA_TAGS_POSITION" description="PLG_SYSTEM_ITPMETA_TAGS_POSITION_DESC" >
                  <option value="0">PLG_SYSTEM_ITPMETA_STANDARD</option>
                  <option value="1">PLG_SYSTEM_ITPMETA_AFTER_HEAD</option>
                  <option value="2">PLG_SYSTEM_ITPMETA_AFTER_TITLE</option>
               </field>
	       </fieldset>
	       
	       <fieldset name="schemes" label="PLG_SYSTEM_ITPMETA_SCHEMAS_TITLE">
		       <field name="facebook_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_FACEBOOK_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_FACEBOOK_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_article_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_ARTICLE_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_ARTICLE_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_blog_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BLOG_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BLOG_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_business_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BUSINESS_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BUSINESS_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_product_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_PRODUCT_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_PRODUCT_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_book_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BOOK_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_BOOK_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_profile_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_PROFILE_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_PROFILE_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_video_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_VIDEO_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_VIDEO_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_music_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_MUSIC_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_MUSIC_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
		       <field name="opengraph_website_scheme" type="radio" default="0"  label="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_WEBSITE_SCHEMA" description="PLG_SYSTEM_ITPMETA_ADD_OPENGRAPH_WEBSITE_SCHEMA_DESC" class="btn-group" >
		           <option value="0">JNO</option>
		           <option value="1">JYES</option>
		       </field>
	      </fieldset>
	    
        </fields>
    </config>
</extension>
